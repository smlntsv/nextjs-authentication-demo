# ========================================
# Project Configuration
# ========================================
PROJECT_NAME="Demo Project"

# ========================================
# Application URLs
# ========================================
# Base URL of the frontend (used for generating links)
FRONTEND_BASE_URL=http://localhost:3000

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
# Connection string for the PostgreSQL database
POSTGRES_URL=postgres://user:password@host/database?sslmode=require

# ========================================
# Mailer Configuration
# ========================================
# SMTP settings for sending emails
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=587
# Encryption method: SSL or TLS
SMTP_ENCRYPTION=TLS
SMTP_USERNAME=Username
SMTP_PASSWORD=Password
# Sender information
SMTP_FROM_NAME="[Demo Project]"
SMTP_FROM_ADDRESS=username@example-mail.com

# ========================================
# Email Testing (E2E)
# ========================================
# Only required for end-to-end email testing using Mailtrap
MAILTRAP_API_TOKEN=token
MAILTRAP_TEST_INBOX_ID=id
MAILTRAP_ACCOUNT_ID=id
